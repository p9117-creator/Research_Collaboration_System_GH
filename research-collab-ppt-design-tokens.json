{
  "meta": {
    "name": "Research Collaboration System - Swiss Academic",
    "version": "1.0.0",
    "viewport": "1280x720"
  },
  "colors": {
    "primary": {
      "black": "#000000",
      "white": "#FFFFFF",
      "accent": "#E30220"
    },
    "neutral": {
      "gray900": "#1A1A1A",
      "gray700": "#333333",
      "gray500": "#666666",
      "gray300": "#CCCCCC",
      "gray100": "#F3F4F5",
      "gray050": "#F9F9F9"
    },
    "semantic": {
      "background": "#FFFFFF",
      "surface": "#F3F4F5",
      "text-primary": "#000000",
      "text-secondary": "#333333",
      "text-tertiary": "#666666",
      "border": "#000000",
      "border-subtle": "#CCCCCC",
      "success": "#2D6A4F",
      "error": "#E30220"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": "'Helvetica Neue', Helvetica, Arial, sans-serif",
      "mono": "'Roboto Mono', 'Courier New', monospace"
    },
    "size": {
      "display": "96px",
      "h1": "72px",
      "h2": "54px",
      "h3": "36px",
      "h4": "28px",
      "body-large": "28px",
      "body": "24px",
      "body-dense": "22px",
      "caption": "16px",
      "label": "14px"
    },
    "weight": {
      "light": 300,
      "regular": 400,
      "medium": 500,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.1,
      "heading": 1.2,
      "body": 1.5,
      "dense": 1.4
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px",
    "3xl": "64px",
    "section": "96px",
    "gutter": "40px",
    "margin-x": "120px",
    "margin-y": "80px"
  },
  "layout": {
    "grid": {
      "columns": 6,
      "width": "240px",
      "gutter": "40px"
    },
    "container": {
      "maxWidth": "1040px"
    }
  },
  "borders": {
    "width": {
      "hairline": "1px",
      "thick": "4px"
    },
    "radius": {
      "none": "0px",
      "sm": "2px",
      "md": "4px"
    }
  },
  "shadows": {
    "none": "none",
    "sharp": "4px 4px 0px 0px rgba(0,0,0,0.1)"
  },
  "animation": {
    "duration": {
      "fast": "0.3s",
      "normal": "0.5s",
      "slow": "0.8s"
    },
    "easing": {
      "default": "ease-out"
    }
  }
}