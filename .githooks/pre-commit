#!/bin/bash
# Pre-commit hook for Research Collaboration System
# This hook runs before each commit to ensure code quality

set -e

echo "Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if Python files are being committed
PYTHON_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$' || true)

if [ -n "$PYTHON_FILES" ]; then
    echo -e "${YELLOW}Checking Python files...${NC}"
    
    # Run flake8 linting
    echo "Running flake8..."
    if command -v flake8 &> /dev/null; then
        flake8 $PYTHON_FILES --max-line-length=127 --ignore=E501,W503 || {
            echo -e "${RED}Flake8 check failed. Please fix the issues above.${NC}"
            exit 1
        }
        echo -e "${GREEN}Flake8 passed!${NC}"
    else
        echo -e "${YELLOW}Warning: flake8 not installed, skipping lint check${NC}"
    fi
    
    # Run black formatting check
    echo "Checking code formatting with black..."
    if command -v black &> /dev/null; then
        black --check $PYTHON_FILES 2>/dev/null || {
            echo -e "${YELLOW}Code not formatted. Run 'black .' to format.${NC}"
            # Not failing, just warning
        }
    fi
    
    # Check for debug statements
    echo "Checking for debug statements..."
    if grep -n "import pdb\|pdb.set_trace()\|breakpoint()\|print(" $PYTHON_FILES 2>/dev/null; then
        echo -e "${YELLOW}Warning: Debug statements found. Consider removing them.${NC}"
    fi
fi

# Run tests for changed files
echo "Running unit tests..."
if command -v pytest &> /dev/null; then
    pytest tests/unit/ -q --tb=no 2>/dev/null || {
        echo -e "${RED}Unit tests failed. Please fix failing tests before committing.${NC}"
        exit 1
    }
    echo -e "${GREEN}Unit tests passed!${NC}"
else
    echo -e "${YELLOW}Warning: pytest not installed, skipping tests${NC}"
fi

echo -e "${GREEN}All pre-commit checks passed!${NC}"
exit 0
